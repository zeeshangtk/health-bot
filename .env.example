# =============================================================================
# Health Bot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# The app will fail fast if required variables are missing
# =============================================================================

# -----------------------------------------------------------------------------
# Telegram Bot (Required)
# -----------------------------------------------------------------------------
TELEGRAM_TOKEN=your-telegram-bot-token-here

# -----------------------------------------------------------------------------
# Health Service API
# -----------------------------------------------------------------------------
# Database
HEALTH_SVC_DB_DIR=data
HEALTH_SVC_DB_FILE=health_bot.db

# API Server
HEALTH_SVC_HOST=0.0.0.0
HEALTH_SVC_PORT=8000
HEALTH_SVC_RELOAD=false

# Upload Configuration
HEALTH_SVC_UPLOAD_DIR=uploads
HEALTH_SVC_UPLOAD_MAX_SIZE=10485760

# Health Service API URL (used by telegram bot)
HEALTH_SVC_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Redis & Celery
# -----------------------------------------------------------------------------
HEALTH_SVC_REDIS_URL=redis://localhost:6379
HEALTH_SVC_REDIS_DB=0
HEALTH_SVC_CELERY_TASK_SERIALIZER=json
HEALTH_SVC_CELERY_RESULT_SERIALIZER=json
HEALTH_SVC_CELERY_ACCEPT_CONTENT=json
HEALTH_SVC_CELERY_TIMEZONE=UTC
HEALTH_SVC_CELERY_ENABLE_UTC=true

# -----------------------------------------------------------------------------
# Paperless NGX Integration (Optional)
# -----------------------------------------------------------------------------
PAPERLESS_NGX_URL=http://localhost:8000
PAPERLESS_NGX_API_TOKEN=
PAPERLESS_NGX_TIMEOUT=30
PAPERLESS_NGX_VERIFY_SSL=true

# -----------------------------------------------------------------------------
# Google Gemini AI (Required for document parsing)
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key-here
