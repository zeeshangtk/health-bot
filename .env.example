# Health Bot Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - API Authentication
# =============================================================================

# API key for authenticating requests to the Health Service API
# Must be at least 32 characters. Generate with: openssl rand -hex 32
HEALTH_SVC_API_KEY=your-secure-api-key-at-least-32-characters

# Telegram Bot Token from @BotFather
TELEGRAM_TOKEN=your-telegram-bot-token

# =============================================================================
# OPTIONAL - External Services
# =============================================================================

# Google Gemini API key for lab report extraction
GEMINI_API_KEY=

# Paperless NGX configuration (for document management)
PAPERLESS_NGX_URL=http://localhost:8000
PAPERLESS_NGX_API_TOKEN=
PAPERLESS_NGX_TIMEOUT=30
PAPERLESS_NGX_VERIFY_SSL=true

# =============================================================================
# OPTIONAL - Service Configuration
# =============================================================================

# Health Service port (default: 8000)
HEALTH_SVC_PORT=8000

# Flower monitoring port (default: 5555)
FLOWER_PORT=5555

# =============================================================================
# OPTIONAL - Docker Registry (for deployment)
# =============================================================================

# Container registry URL
REGISTRY=ghcr.io

# GitHub repository owner for image tagging
GITHUB_REPO_OWNER=your-username

# Image tags
HEALTH_SVC_TAG=latest
TELEGRAM_BOT_TAG=latest
